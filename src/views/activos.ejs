<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    
    <%- include('partes/header.ejs') %>
    <title>ACTIVOS</title>
</head>
<body>
    <%- include('partes/navegacion.ejs') %>
    <main>
      <div id="titulo-container">
        <div id="titulo">ACTIVOS</div>
      </div>
      <div  eblclass="container">  
      <table class="table table-bordered table-striped text-center mt-4" id="tabla">
        <thead>
          <tr class="bg-primary text-white">
            <th scope="col" class="p-1">PLANTA</th>
            <th scope="col" class="p-1">SECTOR</th>
            <th scope="col" class="p-1">ACTIVO</th>
            <th scope="col" class="p-1">ESTADO</th>
            <th scope="col" class="p-1">ACCIONES</th>
          </tr>
        </thead>
        <tbody>
          <!-- //Los results que yo paso en el index.js, acÃ¡ los uso con la variable orden declarada dentro del forEach                                  -->
          <% results.forEach((activo)=>{ %>             
            <tr>  
                <td class="p-1"><%= activo.planta %></td>  
                <td class="p-1"><%= activo.sector %></td>
                <td class="p-1"><%= activo.nombre %></td>
                <td class="p-1"><%= activo.estado %></td>  
                <td class="p-1">
                  <!-- Boton ver orden -->  
                  <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#verOrden<%= activo.idstock %>">
                    <i class='bx bx-show bx-sm'></i>
                  </button>
                </td>
            </tr>
            <%- include('partes/modalVerOrden.ejs',{"id":orden.id_orden_trabajo,"datos":orden}) %>                               
         <% }) %>
        </tbody>
      </table>
      </div>
    </main>   
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
  <!-- JQUERY -->
  <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
  <!-- DATATABLES -->
  <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
  <!-- BOOTSTRAP -->
  <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
  <script src="/buscarFiltrarTabla.js"></script>
  <script src="/actualizarPagina.js"></script>
</body>
</html>