<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    
    <%- include('partes/header.ejs') %>
    <title>TERCEROS</title>
</head>
<body>
  <div id="menu">
    <%- include('partes/navegacion.ejs') %>
  </div>
    <main>
      <div id="titulo-container">
        <div id="titulo">TERCEROS</div>
      </div>
      <div  eblclass="container">

        <% if(login){%>
        <!-- Boton agregar terceros -->  
        <button type="button" class="btn btn-outline-secondary  mt-4" style="font-size: 2rem;" data-bs-toggle="modal" data-bs-target="#agregarTercero" id="botonAgregarStock">
            <i class='bx bxs-user-plus' undefined ></i>
        </button>
        <%- include('partes/modalAgregarTercero.ejs') %>
        <% } %>
      <table class="table table-bordered table-striped text-center mt-4" id="tabla">
        <thead>
          <tr class="bg-primary text-white">
            <th scope="col" class="p-1">ID</th>
            <th scope="col" class="p-1">ROL</th>
            <th scope="col" class="p-1">TELÉFONO</th>
            <th scope="col" class="p-1">EMAIL</th>
            <th scope="col" class="p-1">NOMBRE</th>
            <th scope="col" class="p-1">APELLIDO</th>
            <th scope="col" class="p-1">NOTA</th>
            <% if(login){%>
            <th scope="col" class="p-1">ACCIONES</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <!-- //Los results que yo paso en el index.js, acá los uso con la variable orden declarada dentro del forEach                                  -->
          <% results.forEach((tercero)=>{ %>             
            <tr>  
                <td class="p-1" ><%= tercero.idterceros %></td>  
                <td class="p-1"><%= tercero.rol %></td>
                <td class="p-1"><%= tercero.numero_telefonico %></td>
                <td class="p-1"><%= tercero.correo_electronico %></td>
                <td class="p-1"><%= tercero.nombre %></td>
                <td class="p-1"><%= tercero.apellido %></td>
                <td class="p-1"><%= tercero.descripcion %></td>
                <% if(login){%>
                <td class="p-1">
                     <!-- Boton editar tercero -->  
                   <button type="button" class="btn btn-outline-info"  data-bs-toggle="modal" data-bs-target="#editarTercero<%= tercero.idterceros %>">
                    <i class='bx bx-edit-alt bx-sm'></i>
                  </button>
                  <!-- Boton eliminar tercero -->  
                  <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#eliminarTercero<%= tercero.idterceros %>">
                    <i class='bx bx-trash bx-sm bx-flip-horizontal' style='color:#0f1010' ></i>
                  </button>
                </td>

                <% } %>
            </tr>
            <%- include('partes/modalEditarTercero.ejs',{"id":tercero.idterceros, "datos":tercero}) %>
            <%- include('partes/modalEliminarTercero.ejs',{"id":tercero.idterceros,"datos":tercero}) %>                      
         <% }) %>
        </tbody>
      </table>
      </div>
    </main>   
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
  <!-- JQUERY -->
  <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
  <script src="https://cdn.datatables.net/fixedheader/3.1.6/js/dataTables.fixedHeader.min.js"></script>
  <!-- DATATABLES -->
  <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
  <!-- BOOTSTRAP -->
  <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
  <script src="/buscarFiltrarTablaTerceros.js"></script>
  <script src="/actualizarPagina.js"></script>
</body>
</html>