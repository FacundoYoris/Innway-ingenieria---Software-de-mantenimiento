<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <title>CRUD</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">        
    <nav class="navbar navbar-light">      
      </nav>            
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active bg-primary text-white" style="border-radius: 5px;" aria-current="page" href="/orden-de-trabajo">Volver</a>
              </li>                             
            </ul>            
          </div>
        </div>
      </nav>
      <div  eblclass="container">    
        <a href="/orden-de-trabajo/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-plus-circle bx-md'></i></a>    
      <table class="table table-bordered table-striped text-center mt-4">
        <thead>
          <tr class="bg-primary text-white">
            <th scope="col" class="p-1">ID</th>
            <th scope="col" class="p-1">TAREA</th>
            <th scope="col" class="p-1">ESTADO</th>
            <th scope="col" class="p-1">PRIORIDAD</th>
            <th scope="col" class="p-1">TIPO</th>
            <th scope="col" class="p-1">FECHA INICIO</th>
            <th scope="col" class="p-1">ACTIVO</th>
            <th scope="col" class="p-1">TIEMPO ESPERADO</th>
            <th scope="col" class="p-1">DESCRIPCIÓN</th>
            <th scope="col" class="p-1">ACCIONES</th>
          </tr>
        </thead>
        <tbody>
          <!-- //Los results que yo paso en el index.js, acá los uso con la variable orden declarada dentro del forEach                                  -->
          <% results.forEach((orden)=>{ %>             
            <tr>  
                <td class="p-1"><%= orden.id_orden_trabajo %></td>  
                <td class="p-1"><%= orden.actividad %></td>
                <td class="p-1"><%= orden.estado %></td>
                <td class="p-1"><%= orden.prioridad %></td>  
                <td class="p-1"><%= orden.tipo %></td>
                <td class="p-1"><%= orden.fecha_inicio %></td>
                <td class="p-1"><%= orden.activo %></td>  
                <td class="p-1"><%= orden.tiempo_esperado %></td>
                <td class="p-1"><%= orden.descripción_problematica %></td>
                <td class="p-1">
                  <a href="/orden-de-trabajo/edit/<%= orden.id_orden_trabajo %>" class="btn btn-outline-info">editar</a>
                  <a href="/delete" class="btn btn-outline-danger">borrar</a>                  
                </td>
            </tr>                                   
         <% }) %>
        </tbody>
      </table>
      </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
</body>
</html>